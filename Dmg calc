import os

def validate_file(file_path):
    if not os.path.exists(file_path):
        return f"Error: {file_path} does not exist."
    
    if not file_path.endswith(('.c', '.cpp', '.h')):
        return "Error: File is not a recognized C/C++ source file."
    
    return "File is valid."

file_path = "example.c"
print(validate_file(file_path))

a=1
b=2
print(a)
print(a+b)
